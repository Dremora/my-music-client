<div class="container">
  <div class="page-header">
    <h1>My Music Collection <sup><span class="label label-success">1700</span></sup>
      <span class="pull-right">
      {{#if session.isWorking}}
        Signing in...
      {{else}}
        {{#if session.isAuthenticated}}
           {{#link-to 'albums.new' class="btn btn-primary"}}New{{/link-to}}
           <button type="button" class="btn btn-primary" {{action "logout"}}>Log out</button>
        {{else}}
          <a class="btn btn-primary" {{action 'login'}}>
            <span class="fa fa-facebook"></span>
            Log in
          </a>
        {{/if}}
      {{/if}}
      </span>
    </h1>
  </div>
  {{outlet}}
</div>
